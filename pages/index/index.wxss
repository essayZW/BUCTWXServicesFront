/* pages/index/index.wxss */

.center{
  text-align:center;
}
.text-margin{
  margin-top: 30px;
  margin-bottom: 20px;
}

.index-normal{
  font-size: 25px;
  font-weight: bold;
}

/* 导航栏滑块样式组件 */
.dots-group{
  width:100%;
  height:20px;
  line-height: 20px;
  text-align: center;
}
.dots-group>view{
  /* 设置滑块点的样子，宽高等,默认是圆点 */
  width:4px;
  height:4px;
  border-radius: 4px;
  display: inline-block;
  /* 间隔 */
  margin-right: 8px;
}
.normal-dots{
  /* 滑块正常时候的样子 */
  background-color: gray;
}
.active-dots{
  /* 滑块被选中的样子 */
  background-color: black;
}
.image1{
  margin-right: 30rpx;
  display: inline-block;
}
.image2{
  margin-right: 30rpx;
  display: inline-block;
}
.image3{
  display: inline-block;
}
.index-link{
  width:210rpx;
  height:290rpx;
} 

/* 蒙版 */
.mask{
  width:100%;
  height:100%;
  position: fixed;
  top:0px;
  bottom:0px;
  background-color: rgba(30, 30, 30, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
}

.mask>.content{
  width: 80%;
  max-height: 70%;
  min-height: 30%;
  background-color: white;
  border-radius: 18rpx;
  z-index: 2;
  overflow: auto;
  padding: 20rpx;
}