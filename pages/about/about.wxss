/* 蒙版 */
.mask{
  width:100%;
  height:100%;
  position: fixed;
  top:0px;
  bottom:0px;
  background-color: rgba(30, 30, 30, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
}

.mask>.content{
  width: 70%;
  max-height: 85%;
  min-height: 50%;
  background-color: white;
  border-radius: 18rpx;
  z-index: 2;
  overflow: auto;
  padding: 50rpx;
}