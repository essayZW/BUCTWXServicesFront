/* 单个成绩显示 */
.mask{
  width:100%;
  height:100%;
  position: fixed;
  z-index: 3;
  top:0px;
  left:0px;
  background-color: rgba(30, 30, 30, 0.3);
}

.single-grade-area{
  width:80%;
  height:500rpx;
  min-height:500rpx;
  max-width: 500rpx;
  border-radius: 14rpx;
  padding: 10rpx;
  position: absolute;
  top:0px;
  left:0px;
  bottom:0px;
  right:0px;
  margin:auto;
  background-color: white;
  z-index: 4;
}

.single-grade-title{
  text-align: center;
  font-weight: bold;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 20rpx;
}
/* 表格基本的CSS */
.table{
  width:100%;
  border:1px solid black;
  margin: 0px auto;
}
.table>.tr{
  width:100%;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid black;
}
.table>.tr:last-child{
  border-bottom: none;
}
.table>.tr>.bold{
  font-weight: bold;
}
.table>.tr>.td{
  display: inline-block;
  flex-grow: 1;
  height:100%;
  text-align: center;
  border-right:1px solid black;
  overflow: hidden;
}
.table>.tr>.td:last-child{
  border-right:none;
}
/* 表格基本CSS结束 */

.table{
  width:86%;
  margin-top:20rpx;
}
.table>.tr{
  height:60rpx;
  line-height: 60rpx;
}
.table>.tr>.td{
  line-height: 60rpx;
  width:calc(100% / 3);
}